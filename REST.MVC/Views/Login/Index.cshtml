
@model LoginModel
<section id="login" class="card mat-elevation-z3">
    <h1 class="text-center">Login</h1>

    <form action="/api/login" method="post" accept="application/json" class="form-horizontal">
        <div class="form-group">
            <label asp-for="UserName" class="bmd-label-floating"></label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class=""></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" asp-action="ForgotPassword">Forgot Password?</a>
        <div asp-validation-summary="All"></div>
    </form>

</section>